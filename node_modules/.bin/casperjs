#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/python" ]; then
  exec "$basedir/python"  "$basedir/../casperjs/bin/casperjs" "$@"
else 
  exec python  "$basedir/../casperjs/bin/casperjs" "$@"
fi
